{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 755,
    "height": 350,
    "background": "#f9f9f5",
    "data": {
      "url": "https://raw.githubusercontent.com/Cwee01/datavisualization2/main/Petrol_Dataset_June_23_2022_cleanned.csv"
    },
    "params": [
      {
        "name": "region_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Region: "
        }
      }
    ],
    "transform": [
      {
        "filter": "region_selection == null || datum.Region == region_selection"
      },
      {
        "aggregate": [
          {"op": "sum", "field": "GDP_Per_Capita(USD)", "as": "GDP"},
          {"op": "sum", "field": "Daily_Oil_Consumption(Barrels)", "as": "consumption"}
        ],
        "groupby": ["Country", "Region"]
      },
      {"filter": "datum.GDP != 0"},
      {"filter": "datum.consumption != 0"}
    ],
    "encoding": {
      "x": {
        "field": "GDP",
        "type": "quantitative",
        "title": "GDP",
        "axis": {"tickCount": 7, "grid": false},
        "scale": {"domain": [0, 100000]}
      },
      "y": {
        "field": "consumption",
        "type": "quantitative",
        "title": "consumption",
        "axis": {"tickCount": 6, "grid": false},
        "scale": {"type": "log", "domain": [1, 1000000000]}
      }
    },
    "layer": [
      {
        "params": [
          {"name": "paintbrush", "select": {"type": "point", "on": "mouseover"}}
        ],
        "transform": [
          {"filter": "paintbrush != null"}
        ],
        "mark": "circle",
        "encoding": {
          "color": {
            "title": "Region",
            "field": "Region",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            },
            "legend": {
              "direction": "horizontal",
              "orient": "top",
              "titleLimit": 1000
            }
          },
          "size": {"condition": {"param": "paintbrush","empty":false, "value": 200}, "value": 100},
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {
              "field": "consumption",
              "type": "quantitative",
              "title": "Daily Oil Consumption"
            },
            {
              "field": "GDP",
              "type": "quantitative",
              "title": "GDP",
              "format": ".2f"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "bottom",
          "dx": -12,
          "fontSize": 13,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Russia' || datum['Country'] == 'Australia' || datum['Country'] == 'China'  ||  datum['Country'] == 'United States of America' || datum['Country'] == 'Malaysia'",
              "value": 1
            },
            "value": 0
          }
        }
      }
    ],
    "config": {"view": {"stroke": null}}
  }